<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  async function payNow() {
    const total = <%= cartTotal %>;

    try {
      // Step 1: Create Razorpay order on the server
      const res = await fetch('/create-order', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ amount: total })
      });

      const order = await res.json();

      // Step 2: Open Razorpay Checkout
      const options = {
        key: "rzp_test_OZrFAcL6k5KA07", // ‚úÖ Your Razorpay key
        amount: order.amount,
        currency: "INR",
        name: "SCatch Store",
        description: "Payment for items in cart",
        order_id: order.id,
        handler: function (response) {
          // Step 3: Send payment details to backend for verification
          fetch('/verify-payment', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(response),
          }).then(res => {
            if (res.redirected) window.location.href = res.url;
            else alert("‚ùå Payment verification failed.");
          });
        },
        prefill: {
          name: "Test User",
          email: "test@example.com",
          contact: "9999999999"
        },
        theme: { color: "#0f766e" }
      };

      const rzp = new Razorpay(options);
      rzp.open();
    } catch (err) {
      alert("Oops! Something went wrong during checkout.");
      console.error(err);
    }
  }
</script>


