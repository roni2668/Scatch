<%- include('./partials/header') %>
<div class="max-w-xl mx-auto mt-10 p-6 bg-white shadow-md rounded-xl">
  <h2 class="text-2xl font-semibold mb-4">Change Password</h2>
  <form action="/change-password" method="POST">
    <div class="mb-4">
      <label class="block text-gray-700">Current Password</label>
      <input type="password" name="currentPassword" class="w-full px-3 py-2 border rounded-md" required />
    </div>
    <div class="mb-4">
      <label class="block text-gray-700">New Password</label>
      <input type="password" name="newPassword" class="w-full px-3 py-2 border rounded-md" required />
    </div>
    <button class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">Change Password</button>
  </form>
</div>
<%- include('./partials/footer') %>
