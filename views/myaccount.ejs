<%- include('./partials/header') %>

<div class="min-h-screen bg-gray-100 py-10 px-5">
  <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6 border-b pb-2">My Account</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- User Info -->
      <div>
        <p class="text-lg mb-2">
          <strong>Name:</strong>
  <%= user.fullname && user.fullname.trim() !== "" ? user.fullname : "No name provided" %>
</p>

        <p class="text-lg mb-2"><strong>Email:</strong> <%= user.email %></p>
        <p class="text-lg mb-2">
  <strong>Joined:</strong>
  <%= user.createdAt ? new Date(user.createdAt).toLocaleDateString("en-US") : "N/A" %>
</p>


      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col gap-4">
        <a href="/edit-profile" class="px-4 py-2 bg-blue-500 text-white text-center rounded hover:bg-blue-600">Edit Profile</a>
        <a href="/change-password" class="px-4 py-2 bg-yellow-500 text-white text-center rounded hover:bg-yellow-600">Change Password</a>
        <a href="/order-history" class="px-4 py-2 bg-green-500 text-white text-center rounded hover:bg-green-600">Order History</a>
        <a href="/users/logout" class="px-4 py-2 bg-red-500 text-white text-center rounded hover:bg-red-600">Logout</a>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
